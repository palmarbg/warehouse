<UserControl x:Class="Robotok.View.Grid.MapGridContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Robotok.View.Grid"
             xmlns:converters="clr-namespace:Robotok.View.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <local:MapGrid
            Grid.Column="1"
            Grid.Row="1"
            x:Name="MapGrid"
            />
        
        <local:VerticalNumberStrip
            Grid.Column="0"
            Grid.Row="1"
            x:Name="VerticalNumberStrip"
            />
        
        <local:HorizontalNumberStrip
            Grid.Column="1"
            Grid.Row="0"
            x:Name="HorizontalNumberStrip"
            />
        

    </Grid>
</UserControl>
